 <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center text-primary">Modifier article</h2>
                <h3 class="text-center text-danger">{{message}}</h3>
                <form method="post" action="/admin/modifier/article/{{id}}">
                    <div class="form-group">
                        <label class="control-label">Titre </label>
                        <input name="titre" class="form-control" value={{titre}} type="text">
                    </div>
                     <div class="form-group">
                        <label class="control-label">Ajouter un lien image </label>
                        <input name="image"  value={{image}} class="form-control" type="text">
                        
                        <a style="color:red;" target="_blank" href="/admin/gallerie/1"> ! selectionner un lien image</a>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Categorie </label>
                        <select name="categorie" value={{categorie}} class="form-control">
                            
                                {{#each rubriques}}
                                <option  value={{this.titre}}>{{this.titre}}</option> 
                                {{/each}}
                                {{#each blogs}}
                                <option  value={{this.titre}}>{{this.titre}}</option> 
                                {{/each}}
                        
                        </select>
                    </div>
                    <br>
                    <hr>
                            <textarea name="contenu">
                                    {{#if contenu}}
                                        {{contenu}}
                                    {{/if}}
                            </textarea>
                    <br>
                    <hr>
                    <button class="btn btn-success pull-right" type="submit">Modifier</button>
                </form>
            </div>
        </div>
    </div>

<script>
    tinymce.init({
  selector: 'textarea',
  height: 500,
  plugins: [
        "advlist autolink lists link image charmap print preview anchor",
        "searchreplace visualblocks code fullscreen",
        "insertdatetime media table contextmenu paste imagetools"
    ],
    toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
  // imagetools_cors_hosts: ['www.tinymce.com', 'codepen.io'],
  content_css: [
    '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
    '//www.tinymce.com/css/codepen.min.css'
  ]
});
</script>